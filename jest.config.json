{
  "roots": ["<rootDir>/tests"],
  "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts$",
  "moduleFileExtensions": ["js", "json", "node", "ts"],
  "globals": {
    "ts-jest": {
      "tsconfig": "tsconfig.json"
    }
  },
  "collectCoverageFrom": ["src/**/*.ts", "!**/node_modules/**"],
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 80
    }
  },
  "reporters": ["default"],
  "preset": "ts-jest"
}
